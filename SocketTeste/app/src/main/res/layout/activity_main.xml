<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/main_activity_input_server_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ip address"/>
        <EditText
            android:id="@+id/main_activity_input_server_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="port"/>
        <Button
            android:id="@+id/main_activity_summit_button_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectar"/>
        <EditText
            android:id="@+id/main_activity_inputext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/main_activity_summit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperatura"/>
        <SeekBar
            android:id="@+id/main_activity_temperature_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>